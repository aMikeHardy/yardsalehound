doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
  title #{title}
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css', integrity='sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M', crossorigin='anonymous')
  link(rel='stylesheet', href='css/custom.css', type='text/css')
  style.
    #map {
    height: 100%;
    }
    html, body {
    height: 100%;
    margin: 0;
    padding: 0;
    }
  body.bg-light
    nav.navbar.navbar-expand-lg.navbar-light.bg-purple
      if currentUser
        a.navbar-brand.order-1.text-white(href='/logout') Log Out
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNavAltMarkup', aria-controls='navbarNavAltMarkup', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNavAltMarkup.collapse.navbar-collapse
        .navbar-nav
          a.text-white.nav-item.nav-link(href='/')
            | Find Yard Sales
            span.sr-only (current)
          a.text-white.nav-item.nav-link(href='/list') List Your Yard Sale
          if !currentUser
            a.text-white.nav-item.nav-link(href='/login') Login
            a#register.text-white.nav-item.nav-link(href='/register') Register
          if currentUser
            a#profile.text-white.nav-item.nav-link(href='/profile') Profile

    block content

    //footer
    .row.py-4.text-white.bg-gray
      .col-md.col-xl-5.mx-4.mb-4
        p
          strong About Yardsale Hound
        p
          | Yard Sale Hound has the listings.
      .col-md.col-xl-5.ml-4.mx-4.mb-4
      .container.text-sm-center.bg-gray
        small#copyright.form-text Yardsale Hound 2019 Â© All Rights Reserved.
    script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js', integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js', integrity='sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4', crossorigin='anonymous')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js', integrity='sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1', crossorigin='anonymous')
    script(src='https://code.jquery.com/jquery-3.4.1.min.js', integrity='sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=', crossorigin='anonymous')
    script(src='js/config'.js)
